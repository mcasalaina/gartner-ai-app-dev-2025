# Azure AI Project Configuration
# Copy this file to .env and fill in your actual values

# Azure AI Project endpoint URL that contains a deep research model
DEEP_RESEARCH_PROJECT_ENDPOINT=https://your-project-endpoint.cognitiveservices.azure.com/

# Azure subscription information
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP_NAME=your-resource-group-name
AZURE_PROJECT_NAME=your-azure-ai-project-name

# Name of your Bing search resource
BING_RESOURCE_NAME=your-bing-resource-name

# Name of your deep research model deployment
DEEP_RESEARCH_MODEL_DEPLOYMENT_NAME=your-deep-research-model-deployment

# Name of your model deployment driving the agent
AGENT_MODEL_DEPLOYMENT_NAME=your-model-deployment-name

# Playwright MCP Server Configuration
# URL for the Playwright MCP server (local or remote)
PLAYWRIGHT_MCP_URL=http://localhost:8931/mcp

# GPT-image-1 Configuration
IMAGE_PROJECT_ENDPOINT=https://yourendpoint.openai.azure.com/
IMAGE_MODEL=gpt-image-1
IMAGE_API_VERSION=2025-04-01-preview
IMAGE_KEY=your-image-api-key

# Azure AI Foundry Tracing Configuration
# Set to "true" to capture full content in traces (may include personal data)
# Set to "false" or leave empty for metadata-only tracing (recommended for production)
AZURE_TRACING_GEN_AI_CONTENT_RECORDING_ENABLED=true

# Application Insights Connection String (Required for tracing)
# Get this from: Azure Portal > Application Insights > Overview > Connection String
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=12345678-1234-1234-1234-123456789012;IngestionEndpoint=https://...

# Restaurant Agent Configuration (for evaluation notebooks)
# These settings are used by the restaurant evaluation notebooks
RESTAURANT_ASSISTANT_ID=your-restaurant-agent-id
RESTAURANT_ASSISTANT_MODEL=gpt-4.1-mini
RESTAURANT_ASSISTANT_PROJECT=https://your-restaurant-project.services.ai.azure.com/api/projects/your-project-name
RESTAURANT_PROJECT_NAME=your-project-name
RESTAURANT_SUBSCRIPTION_ID=your-restaurant-subscription-id
RESTAURANT_RESOURCE_GROUP=your-restaurant-resource-group